{
  "name": "flex-plugin-builder",
  "private": true,
  "homepage": "https://github.com/twilio/flex-plugin-builder#readme",
  "bugs": {
    "url": "https://github.com/twilio/flex-plugin-builder/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twilio/flex-plugin-builder.git"
  },
  "license": "MIT",
  "contributors": [
    "Dominik Kundel <dkundel@twilio.com>",
    "Kousha Talebian <ktalebian@twilio.com>"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "audit": "lerna-audit",
    "bootstrap": "lerna bootstrap --no-ci",
    "build": "lerna run build",
    "coverage": "codecov",
    "docs": "./bin/docs-generator.js",
    "postinstall": "npm run bootstrap",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "publish": "lerna-travis-publish",
    "release:alpha": "lerna-travis-release alpha",
    "release:beta": "lerna-travis-release beta",
    "release:public": "lerna-travis-release public",
    "test": "jest --color",
    "test:ci": "jest --clearCache && jest --no-cache --silent --coverage --color --maxWorkers=1",
    "test:coverage": "jest --color --coverage",
    "test:watch": "jest --watchAll --color"
  },
  "husky": {
    "hooks": {
      "pre-commit": "ultra lint",
      "pre-push": "ultra test"
    }
  },
  "dependencies": {
    "markdown-toc": "^1.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@k88/lerna-travis": "^1.1.2",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^26.6.3",
    "babel-register": "^6.26.0",
    "codecov": "^3.8.1",
    "eslint": "^7.19.0",
    "eslint-config-twilio-ts": "1.32.0",
    "glob": "^7.1.6",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lerna-audit": "^1.3.0",
    "ts-jest": "^26.4.4",
    "typescript": "^3.9.7",
    "ultra-runner": "^3.8.0"
  }
}
